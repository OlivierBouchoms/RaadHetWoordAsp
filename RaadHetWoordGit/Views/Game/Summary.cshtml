<!-- Scoreboard op einde -->
@model RaadHetWoordGit.ViewModels.GameViewModel
    
<h2>Afgelopen!</h2>

<div class="container" id="scoreboard">
    <div class="row">
        <div class="col-lg-4 text-center">
            <p>@Model.Game.TeamList[0].ToString()</p>
        </div>
        <div class="col-lg-4 text-center" id="winner">
            <b class="text-success">Team @Model.Winner heeft gewonnen!</b>
        </div>
        <div class="col-lg-4 text-center">
            <p>@Model.Game.TeamList[1].ToString()</p>
        </div>
    </div>
</div>

<div class="container">
    <div class="btn btn-success custom"></div>
</div>